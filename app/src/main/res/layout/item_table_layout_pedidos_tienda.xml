<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tableRow_Factura"
    android:layout_width="411dp"
    android:layout_height="732dp"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_gravity="fill_horizontal"
            android:background="#F7E5E5E6"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="337dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:paddingTop="3dp">

                    <TextView
                        android:id="@+id/tvFecha_Pedido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.25"
                        android:text="TextView"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvTotal_Pedido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.25"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/verde"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvAddress_Pedido"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="0.5"
                                android:text="TextView" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnConf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/rojo"
                                android:insetLeft="6dp"
                                android:insetTop="2dp"
                                android:insetRight="6dp"
                                android:insetBottom="2dp"
                                android:text="Confirmar"
                                android:textAllCaps="true"
                                android:textSize="10sp"
                                android:visibility="invisible"
                                app:cornerRadius="10px" />

                            <TextView
                                android:id="@+id/tvEstado_Pedido"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0.5"
                                android:text="TextView"
                                android:textAlignment="textEnd" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCliente_Pedido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.25"
                        android:text="TextView"
                        android:textColor="#27242C"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/rojo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="114dp"
                android:orientation="vertical">
                android:layout_height="60dp"

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnVer_Pedido"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/rojo"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:text="Ver"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        app:cornerRadius="10px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/divider6"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/rojo" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</TableRow>

